function zflUpdate(id,name,pwd,sex,birthday,signature){
	swal({
		  title: '信息修改',
		  html:'<font size="5">用户名:<input type="text" value="'+name+'" id="swal-input2" class="swal2-input"/>'
		  +'<font size="5">密码:<input type="password" id="swal-input3" class="swal2-input"/>'
		  +'<font size="5">生日:<input type="text" value="'+birthday+'" id="swal-input4" class="swal2-input"/>'
		  +'<font size="5" style="margin-right: 50px">性别:</font>男:<input checked style="margin-right: 30px" type="radio" value="男" name="swal-input5" >女:<input value="女" type="radio" name="swal-input5" class="swal2-radio"><br/>'
		  +'<font size="5">个性签名:</font><input value="'+signature+'" type="text" id="swal-input6" class="swal2-input">'
		  ,
		  preConfirm: function(){
		    return new Promise(function(resolve) { 
		        resolve([
		          $('#swal-input2').val(),
		          $('#swal-input3').val(),
		          $('#swal-input4').val(),
		          $('[name="swal-input5"]:checked').val(),
		          $('#swal-input6').val()
		        ])
		    })
		  }
		}).then(function(result) {
			$.ajax({
				async:false, 
				url:"/myspace/hjn/updatePersonInfo",
				data:{"id":id,"name":result[0],"pwd":result[1],"sex":result[3],"birthday":result[2],"signature":result[4]},
				success:function(date){
					if(date==1){
						 setTimeout(function(){swal({title:'修改成功'})}, 300)
					}else
						setTimeout(function(){swal({title:'修改失败'})}, 300)
				}
			})
		}) 
}
function page(){
    $("#page").Page({
  totalPages: 3,//分页总数
  liNums: 3,//分页的数字按钮数(建议取奇数)
  activeClass: 'activP', //active 类样式定义
  callBack : function(page){
        //console.log(page)
	  update(7,page);
  }
});
}

function update(pagesize,pageindex){
	/*加载用户信息*/
		$.ajax({
			url:"/myspace/zfl/selectperson/"+pagesize+"/"+pageindex,
			async:false,
			//dataType:"json",
			success:function(data){
				var list=$.parseJSON(data);
				var mes="";
				for(var i=0;i<list.length;i++){
					mes +="<tr>";
					mes +="<td>"+list[i].id+"</td>";
					mes +="<td>"+list[i].name+"</td>";
					mes +="<td>"+list[i].pwd+"</td>";
					mes +="<td>"+list[i].sex+"</td>";
					mes +="<td>"+list[i].birthday+"</td>";
					mes +="<td>"+list[i].signature+"</td>";
					mes +='<td align="center"><a href="javaScript:zflUpdate('+list[i].id+',\''+list[i].name+'\',\''+list[i].pwd+'\',\''+list[i].sex+'\',\''+list[i].birthday+'\',\''+list[i].signature+'\')">修改</a></td>';  
					mes +="</tr>";
				}
				$("tbody").html(mes);
			}
		})
